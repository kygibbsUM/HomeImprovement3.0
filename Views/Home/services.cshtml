    <!-- This is the Calculator ZONE-->
    <div class="row">
        <div class="col-md-4 col-centered" id="calchtml">
            <form asp-controller="Projects" asp-action="Create">

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
