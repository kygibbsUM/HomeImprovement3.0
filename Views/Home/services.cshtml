                    function flooringCalculation(){
                        let total = 1 + 1;
                        let totalBox = document.getElementById("totalBox");
                        totalBox.value = total;
                        totalBox.readOnly = true;
                    }

                    function paintingCalculation() {
                        let total = 2 + 2;
                        let totalBox = document.getElementById("totalBox");
