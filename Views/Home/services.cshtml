                                document.getElementById("field5").style.visibility = "hidden";

                                document.getElementById("floorWidth").style.visibility = "hidden"; 
                                document.getElementById("floorHeight").style.visibility = "hidden";
                                console.log("Painting");
                                break;

                            case "Roofing":
                                document.getElementById("field1").style.visibility = "visible";
                                document.getElementById("field2").style.visibility = "visible";
                                document.getElementById("field3").style.visibility = "visible";
                                document.getElementById("field4").style.visibility = "visible";
                                document.getElementById("field5").style.visibility = "visible";

                                document.getElementById("paintWidth").style.visibility = "hidden";
                                document.getElementById("paintHeight").style.visibility = "hidden";
                                document.getElementById("paintWalls").style.visibility = "hidden";

                                document.getElementById("floorWidth").style.visibility = "hidden"; 
                                document.getElementById("floorHeight").style.visibility = "hidden";
                                console.log("Roofing");
                                break;

                            case "Flooring":
                                document.getElementById("floorWidth").style.visibility = "visible"; 
                                document.getElementById("floorHeight").style.visibility = "visible";

                                document.getElementById("field1").style.visibility = "hidden";
                                document.getElementById("field2").style.visibility = "hidden";
                                document.getElementById("field3").style.visibility = "hidden";
                                document.getElementById("field4").style.visibility = "hidden";
                                document.getElementById("field5").style.visibility = "hidden";

                                document.getElementById("paintWidth").style.visibility = "hidden";
                                document.getElementById("paintHeight").style.visibility = "hidden";
                                document.getElementById("paintWalls").style.visibility = "hidden";

                                break;
                            default:
                                console.log("default");
                                break;
                        }
                    }

                    function chooseCalculation() {
                        let jobBox = document.getElementById("typeBox");
                        let jobSelection = jobBox.options[jobBox.selectedIndex].value;

                        switch (jobSelection) {
                            case "Painting":
                                paintingCalculation();
                                break;

                            case "Roofing":
                                roofingCalculation();
                                break;

                            case "Flooring":
                                flooringCalculation();
                                break;

                            default:
