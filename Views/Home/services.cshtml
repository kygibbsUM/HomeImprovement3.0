                    function hideFields() {
                        //When the page loads, hide all fields until the user picks a job. Then display the
                        //ones they will need.
                        document.getElementById("field1").style.visibility = "hidden";
                        document.getElementById("field2").style.visibility = "hidden";
                        document.getElementById("field3").style.visibility = "hidden";
                        document.getElementById("field4").style.visibility = "hidden";
